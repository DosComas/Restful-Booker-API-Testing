{
    "name": "api-test-suite",
    "version": "1.0.0",
    "description": "API Automation Suite Using Supertest and Mocha",
    "scripts": {
        "test": "mocha --file tests/test.setup.js \"tests/*.spec.js\" --timeout 7000 --reporter mochawesome --reporter-options reportDir=test-results,overwrite=true,html=true,json=true,charts=true"
    },
    "dependencies": {
        "@faker-js/faker": "^9.6.0",
        "chai": "^4.3.7",
        "dotenv": "^10.0.0",
        "mocha": "^10.2.0",
        "mochawesome": "^7.1.3",
        "supertest": "^7.1.0"
    },
    "author": "Roberto Hurry"
}